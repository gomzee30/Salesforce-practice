<apex:page standardController="Client__c">
    <apex:form >
    	<apex:pageBlock mode="edit">
            <apex:pageMessages />
            <apex:pageBlockSection >
                <apex:inputField value="{!Client__c.Name}"/>                
                <apex:inputField value="{!Client__c.Email_Address__c}"/>
                <apex:inputField value="{!Client__c.Mobile_Number__c}"/>
                <apex:inputField value="{!Client__c.Point_of_Contact__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton value="Save" action="{!save}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>